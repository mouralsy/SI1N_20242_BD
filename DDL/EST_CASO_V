CREATE SCHEMA EC5_SI1N;

USE ES5_SI1N;

CREATE TABLE IF NOT EXISTS CLIENTES(
CPF_CLIENTE INT PRIMARY KEY,
NOME_CLIENTE VARCHAR(50) NOT NULL,
DATA_NASC_CLIENTE DATE NOT NULL, 
NUM_RUA_CLIENTE VARCHAR(10) NOT NULL,
BAIRRO_CLIENTE VARCHAR(50) NOT NULL,
CIDADE_CLIENTE VARCHAR(50) NOT NULL,
ESTADO_CLIENTE VARCHAR(50) NOT NULL,
STATUS_FIDEL_CLIENTE VARCHAR(50) NOT NULL
);

CREATE TABLE IF NOT EXISTS PRODUTOS(
COD_PROD INT PRIMARY KEY,
NOME_PROD VARCHAR(45) NOT NULL,
DESCRICAO_PROD TEXT NOT NULL,
ESPEC_PROD TEXT NOT NULL,
CATEGO_PROD VARCHAR(45) NOT NULL,
DISPO_ESTOQUE_PROD VARCHAR(50) NOT NULL,
PRECOUNI_PROD DECIMAL(10,2) NOT NULL,
FORNECEDOR_PROD VARCHAR(50)NOT NULL
);

CREATE TABLE IF NOT EXISTS FORNECEDORES(
ID_FORN INT PRIMARY KEY,
TEL_FORN VARCHAR(30) NOT NULL,
NUM_RUA_FORN VARCHAR(10) NOT NULL,
BAIRRO_FORN VARCHAR(50) NOT NULL,
CIDADE_FORN VARCHAR(50) NOT NULL,
ESTADO_FORN VARCHAR(50) NOT NULL,
PROD_FORN VARCHAR(50) NOT NULL
);

CREATE TABLE IF NOT EXISTS VENDAS(
COMPROV_VENDA INT PRIMARY KEY,
CLIENTE_VENDA VARCHAR(50),
PROD_VENDA VARCHAR(50),
FORM_PAG_VENDA VARCHAR(20)
);

CREATE TABLE IF NOT EXISTS PAGAMENTOS(
CONFIRM_PAG INT PRIMARY KEY,
DATA_PAG DATE NOT NULL,
VALOR_PAG VARCHAR(20) NOT NULL,
STATUS_PAG VARCHAR(20) NOT NULL
);
